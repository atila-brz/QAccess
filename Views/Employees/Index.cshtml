@model IEnumerable<QAccess.Models.Employee>

@{
    ViewData["Title"] = "Funcionários";
}

<div style="height: 100%; position: relative;">
    <div class="row">
        <h3>Funcionários</h3>
    </div>
    
    <div class="row">
        <div class="d-flex flex-row-reverse buttons-group-actions">
            <button type="button" class="btn btn-danger ms-2 d-flex align-items-center"><img width="17px" src="~/images/trash.svg" alt="">Excluir</button>
            <a class="btn btn-edit ms-2 d-flex align-items-center"><img width="20px" src="~/images/pencil-square.svg" alt="">Editar</a>
            <button data-bs-toggle="modal" data-bs-target="#registerUnitsModal" class="btn btn-primary ms-2 d-flex align-items-center"><img width="15px" src="~/images/add.svg" alt="">Adicionar</button>
        </div>
    </div>

    <div class="row filter">
        <ul class="list-unstyled list-group ps-0 nav nav-pills mb-auto">
            <li class="mb-1">
                <button class="justify-content-between btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#filter-collapse" aria-expanded="false">
                    <div  class="d-flex align-items-center">
                        <img width="17px" src="~/images/funnel.svg" alt="">
                        <span class="ps-2">Filtros</span>
                    </div>
                </button>
                <div class="collapse filter-group" id="filter-collapse">
                    <div class="d-flex row flex-nowrap flex-lg-row flex-column">
                        <div class="col-lg-6 col-sm-5">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Pesquise por uma palavra chave..." aria-label="Filter" aria-describedby="button-filter">
                                <a class="btn btn-outline-secondary" type="button" id="button-filter">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-5">
                            <select id="inputState" placeholder="Setor" class="form-select">
                                <option selected>Setor</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Sector">@Html.DisplayFor(modelItem => item.Sector)</option>
                                }
                                
                            </select>
                        </div>

                        <div class="col-lg-3 col-sm-5">
                            <select id="inputState" placeholder="Mês" class="form-select">
                                <option selected>Cargo</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Office">@Html.DisplayFor(modelItem => item.Office)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                
            </li>
        </ul>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkModelAll">
                        </div>
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Office)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Sector)
                    </th>
                    <th scope="col">Ações</th>
                <tr>
            </thead>
            <tbody>
                @{
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="checkModel">
                                </div>
                            </th>           
                            <td>
                                <a asp-action="Details" asp-route-id="@item.EmployeeId">@Html.DisplayFor(modelItem => item.Name)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cpf)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Office)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sector)
                            </td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center items-actions" style="gap: 20px;">
                                    <div><img data-bs-whatever="@item.EmployeeId" data-bs-toggle="modal" data-bs-target="#unitsModal" width="22px" src="~/images/trash-red.svg" alt=""></div>
                                    <div><a asp-action="Edit" asp-route-id="@item.EmployeeId"><img width="24px" src="~/images/pencil-square-yellow.svg" alt=""></a></div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class=" pagination-group d-flex flex-row-reverse">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link">Anterior</a>
                </li>
                
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>

                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">2</a>
                </li>

                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>

                <li class="page-item">
                    <a class="page-link" href="#">Próximo</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- Modal -->
<form asp-action="Create">
    <div class="modal fade" id="registerUnitsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5">Registrar Funcionário</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex flex-column">
                        <div class="form-floating">
                            <input required  id="Name" class="form-control" placeholder="Nome" name="Name" class="form-control" />
                            <label for="Name">Nome</label>
                        </div>
                        <div class="form-floating">
                            <input required type="email"  id="Email" name="Email" placeholder="Email" class="form-control" />
                            <label for="Email">Email</label>
                        </div>
                        <div class="form-floating">
                            <input required  type="password" id="Password" name="Password" placeholder="Senha" class="form-control" />
                            <label for="Password">Senha</label>
                        </div>
                        <div class="form-floating">
                            <input required id="Cpf" name="Cpf" placeholder="Cpf" class="form-control" />
                            <label for="Cpf">Cpf</label>
                        </div>
                        <div class="form-floating">
                            <input id="ContactNumber" name="ContactNumber" placeholder="Contato" class="form-control" />
                            <label for="ContactNumber">Contato</label>
                        </div>
                        <div class="form-floating">
                            <input id="Office" name="Office" placeholder="Cargo" class="form-control" />
                            <label for="Office">Cargo</label>
                        </div>
                        <div class="form-floating">
                            <input name="Sector" class="form-control" placeholder="Setor" />
                            <label name="Sector">Setor</label>
                        </div>
                        <div class="form-floating">
                            <select class="form-select" id="Gender" name="Gender" aria-label="Seleção de gênero.">
                                <option selected>Selecione</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outros">Outros</option>
                            </select>
                            <label for="Gender">Gênero</label>
                        </div>
                        <div class="form-floating">
                            <select class="form-select" id="MaritalStatus" name="MaritalStatus" aria-label="Seleção de Estado Civil">
                                <option selected>Selecione</option>
                                <option value="Solteiro">Solteiro</option>
                                <option value="Casado">Casado</option>
                                <option value="Divorciado">Divorciado</option>
                                <option value="Viúva">Viúva</option>
                            </select>
                            <label for="Gender">Estado Civil</label>
                        </div>
                        <div class="form-floating">
                            <input id="BirthDate" class="form-control" type="text" name="BirthDate" placeholder="Data de Nascimento..."onfocus="(this.type='datetime-local')" onblur="(this.type='text')">
                            <label for="BirthDate">Data de Nascimento</label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn-danger btn btn-primary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                        <button type="submit" class="btn-success btn btn-primary" role="button">Salvar</button>
                    </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal -->
<div class="modal fade" id="unitsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Deletar Funcionário</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body my-2">
                <div class="alert alert-danger" role="alert">
                    <span><strong>Alerta!</strong> Não será possível refazer essa operação. O itém será deletado permanentemente.</span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="0" id="awareUnits">
                    <label class="form-check-label" for="awareUnits">Estou ciente!</label>
                </div>
            </div>
            <div class="modal-footer"> 
                <form asp-action="Delete">
                    <input id="unitInputID" type="hidden" name="id"/>
                    <button id="unitButtonId" class="btn bg-danger btn-primary ms-2 d-flex align-items-center" role="button" type="submit" class="btn btn-danger"><img width="17px" style="margin-right: 3px;" src="~/images/trash.svg" alt="">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>