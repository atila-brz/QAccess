@model QAccess.Models.Ocurrence

@{
    ViewData["Title"] = "Details";
}

<div class="row mt-3 mb-3 flex-nowrap w-100 ms-1 d-flex ">
    <H3 class="d-flex justify-content-between title_ocurrence">
        Visualizar Ocorrêcia
        <a asp-action="Index"><i class="bi bi-arrow-down-left-circle-fill"></i></a></H3>
</div>
<div class="d-flex justify-content-between">
    <div class="ms-2">
        <span class="sub_titulo_ocurence">STATUS: </span>
        @if(@Model.Status == Ocurrence.StatusOcurrence.Open){
            <span class="status_ocurrence_open">@Html.DisplayFor(model => model.Status)</span>
        }
        else if(@Model.Status == Ocurrence.StatusOcurrence.InProgress){
            <span class="status_ocurrence_inprogress">@Html.DisplayFor(model => model.Status)</span>
        }
        else if(@Model.Status == Ocurrence.StatusOcurrence.Closed){
        <span class="status_ocurrence_closed">@Html.DisplayFor(model => model.Status)</span>            
        <a></a>
        }
        
    </div>
    <div class="d-flex">@if(@Model.Status == Ocurrence.StatusOcurrence.Open){
        <form class="d-flex " asp-action="Select">
            <input type="hidden" name="id" value="@Model?.OcurrenceId"/>
            <button type="submit" class="btn ocurrence_select_button">
                <img width="15px" style="margin-right: 3px;" src="~/images/check.svg" alt="">
                Solucionar
            </button>
        </form>
        <button  asp-route-id="@Model?.OcurrenceId" data-bs-target="#delete_modal" data-bs-toggle="modal" class="btn ocurrence_delete_button">
            <img width="17px"  src="~/images/trash.svg" alt="">
            Excluir
        </button>
        <a asp-action="Edit" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_edit_button">
            <img width="20px"  src="~/images/pencil-square.svg" alt="">
            Editar
        </a>
        }else if(@Model.Status == Ocurrence.StatusOcurrence.InProgress){
        <form class="d-flex" id="finish-form" asp-action="Finish">
            <input type="hidden" name="id" value="@Model?.OcurrenceId"/>
            <button type="submit" id="finish" class="btn ocurrence_finish_button">
                <img width="17px"  src="~/images/check2-square.svg" alt="">
                Finalizar
            </button>
        </form>
        <button  asp-route-id="@Model?.OcurrenceId" data-bs-target="#delete_modal" data-bs-toggle="modal" class="btn ocurrence_delete_button">
            <img width="17px"  src="~/images/trash.svg" alt="">
            Excluir
        </button>
        <a asp-action="Edit" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_edit_button">
            <img width="20px"  src="~/images/pencil-square.svg" alt="">
            Editar
        </a>
        }else if(@Model.Status == Ocurrence.StatusOcurrence.Closed){
        <button data-bs-target="#delete_modal" data-bs-toggle="modal" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_delete_button">
            <img width="17px"  src="~/images/trash.svg" alt="">
            Excluir
        </button>
        <a asp-action="Edit" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_edit_button">
            <img width="20px"  src="~/images/pencil-square.svg" alt="">
            Editar
        </a>
        }


    </div>
</div>
<div class="body_ocurrence p-3">
    <span class="boder_title_ocurrence">DADOS DA OCURRÊCIA</span>
    <div class="d-flex justify-content-between initial_margin_negative ">
        <div class="col-lg-8 col-sm-12">
            <label asp-for="Responsable" class="control-label"></label>
            <input asp-for="Responsable.Name" disabled class="form-control" />
        </div>
        <div class="col-lg-3 d-sm-none d-lg-inline">
            <label class="control-label">Id Autor</label>
            <input asp-for="CondominiumId" disabled class="form-control" />
        </div>
    </div>
    <div class="mt-3 d-flex justify-content-between">
        <div class="col-lg-8 col-sm-12">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="col-lg-3 d-sm-none d-lg-inline">
            <label class="control-label">Id Ocorrêcia</label>
            <input asp-for="OcurrenceId" disabled class="form-control" />
        </div>
    </div>
    @if (@Model.Status == Ocurrence.StatusOcurrence.Open)
    {
        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" rows="3" disabled class="form-control"></textarea>
        </div>
    }else if(@Model.Status == Ocurrence.StatusOcurrence.InProgress)
    {
        <div class="mt-3 d-flex justify-content-between">
            <div class="form-group col-lg-6 mt-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea value="@Model.Description" rows="3" disabled class="form-control"></textarea>
            </div>
            <div class="form-group col-lg-5 mt-2 ">
                <label asp-for="Answer"  class="control-label"></label>
                <textarea asp-for="Answer" rows="3" id="answer" required class="form-control"></textarea>
                <span id="error_answer"></span>
            </div>
        </div>
    }
    
    <div class="form-group mt-2">
        <label asp-for="PhotoBase64" class="control-label label_photos"></label>
        <div class="lightbox"  >
            <img 
                src="@Model.PhotoBase64" 
                data-bs-whatever="@Model.PhotoBase64" 
                data-bs-target="#image_modal" 
                data-bs-toggle="modal" 
                class="img-thumbnail image_detail_ocurrence" 
                alt=""
            />
        </div>
    </div>
</div>

<div class="modal fade" id="image_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Imagem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <img src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="delete_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Atenção</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir esta ocorrência?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete">
                    <input type="hidden" name="id" value="@Model?.OcurrenceId"/>
                    <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Excluir</button> 
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#image_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var recipient = button.data('bs-whatever');
                var modal = $(this);
                modal.find('.modal-body img').attr('src', recipient);
            });
            $('#delele_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var recipient = button.data('bs-whatever');
                var modal = $(this);
                modal.find('.modal-body input').val(recipient);
            });
            $('#answer').on('blur', function(){
                console.log('teste');
                var answer = $(this).val();
                if(answer.length > 0){
                    $('#finish-form').append('<input type="hidden" name="answer" value="'+answer+'"/>');
                }
            });
            $('#finish').click(function(event) {
                var answer = $('#answer').val();
                if (answer == null || answer == "") {
                    $('#error_answer').addClass('text-danger');
                    $('#error_answer').text('O campo resposta é obrigatório');
                    return false;
                }
            });
        });
    </script>
}