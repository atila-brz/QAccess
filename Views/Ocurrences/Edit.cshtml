@model QAccess.Models.Ocurrence

@{
    ViewData["Title"] = "Edit";
}


<div class="row mt-3 mb-3 flex-nowrap w-100 ms-1 d-flex ">
    <H3 class="d-flex justify-content-between title_ocurrence">
        Visualizar Ocorrêcia
        <a asp-action="Index"><i class="bi bi-arrow-down-left-circle-fill"></i></a></H3>
</div>
<div class="d-flex justify-content-between">
    <div class="ms-2">
        <span class="sub_titulo_ocurence">STATUS: </span>
        @if(@Model.Status == Ocurrence.StatusOcurrence.Open){
            <span class="status_ocurrence_open">@Html.DisplayFor(model => model.Status)</span>
        }
        else if(@Model.Status == Ocurrence.StatusOcurrence.InProgress){
            <span class="status_ocurrence_inprogress">@Html.DisplayFor(model => model.Status)</span>
        }
        else if(@Model.Status == Ocurrence.StatusOcurrence.Closed){
        <span class="status_ocurrence_closed">@Html.DisplayFor(model => model.Status)</span>            
        }
        
    </div>
    <div>
        <a asp-action="Delete" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_delete_button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
            Excluir
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.OcurrenceId" class="btn ocurrence_edit_button disabled">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
            Editar
        </a>
    </div>
</div>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OcurrenceId" />
    <input type="hidden" asp-for="CreationDate"  />
    <input type="hidden" asp-for="Locale" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="CondominiumId" />
    <div class="body_ocurrence p-3">
        <span class="boder_title_ocurrence">DADOS DA OCURRÊCIA</span>
        <div class="d-flex justify-content-between initial_margin_negative ">
            <div class="col-lg-8 col-sm-12">
                <label  class="control-label">Autor</label>
                <input asp-for="Responsable.Name" disabled class="form-control" />
            </div>
            <div class="col-lg-3 d-sm-none d-lg-inline">
                <label class="control-label">Id Autor</label>
                <input asp-for="Responsable.CondominiumId" disabled class="form-control" />
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <div class="col-lg-8 col-sm-12">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="col-lg-3 d-sm-none d-lg-inline">
                <label class="control-label">Id Ocorrêcia</label>
                <input asp-for="OcurrenceId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
        </div>
        <div class="form-group my-2">
            <label asp-for="PhotoBase64"  class="control-label label_photos"></label>
            <input type="file" class="form-control" id="photo_path" multiple>
        </div>
        <input asp-for="PhotoBase64" id="photo" type="hidden" />
        <div id="gallery">
            
        </div>
        <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

<div class="modal fade" id="image_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Imagem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <img src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var phto_old = $('#photo').val();
            $('#gallery').append('<img src="' + phto_old + '" class="img-thumbnail image_detail_ocurrence" data-bs-whatever="' + phto_old + '" data-bs-target="#image_modal" data-bs-toggle="modal" alt="" />');
            $('#image_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var recipient = button.data('bs-whatever');
                var modal = $(this);
                modal.find('.modal-body img').attr('src', recipient);
            });
            $('#photo_path').on('change', function () {
                $('#gallery').empty();
                console.log(this.files);
                for (var i = 0; i < this.files.length; i++) {
                    let file = this.files[i];
                    let reader = new FileReader();
                    reader.onloadend = function () {
                    $('#photo').val('')
                    $('#photo').val(reader.result);
                    $('#gallery').append('<img src="' + reader.result + '" class="img-thumbnail image_detail_ocurrence" data-bs-whatever="' + reader.result + '" data-bs-target="#image_modal" data-bs-toggle="modal" alt="" />');
                    }
                    if (file) {
                    reader.readAsDataURL(file);
                    }
                }
            });
        });
    </script>
}
