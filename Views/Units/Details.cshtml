@model QAccess.Models.Unit

@{
    ViewData["Title"] = "Unidade";
}

<div>
    <div class="row">
        <h3 style="font-weight: 500;">Unidades</h3>
    </div>
    <nav class="rounded-3 nav-breadcrumb d-flex justify-content-between align-items-center" aria-label="breadcrumb">
        <ol class="breadcrumb mx-0 my-0">
            <li class="breadcrumb-item"><a asp-action="Index">Unidades</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.UnitId</li>
        </ol>
    </nav>

    <div class=" my-3 d-flex flex-row-reverse buttons-group-actions">
        <button data-bs-whatever="@Model.UnitId" data-bs-toggle="modal" data-bs-target="#defaultModalAction" type="button" class="btn btn-danger ms-2 d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/></svg>
            Excluir
        </button>
        <a class="btn btn-edit ms-2 d-flex align-items-center" asp-action="Edit" asp-route-id="@Model.UnitId" >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg>
            Editar
        </a>
    </div>
                
    <div class="row my-4">
        <div class="form-group-contour rounded-3 p-3">
            <span class="form-group-title">Dados da Unidade</span>
            <fieldset disabled>
                <div class="row">
                    <div class="row">
                        <div class="col-lg-4">
                            <label for="inputUnitId" class="form-label">@Html.DisplayNameFor(Model => Model.UnitId):</label>
                            <input asp-for="UnitId" type="text" class="form-control" id="inputUnitId">
                        </div>
                        <div class="col-lg-4">
                            <label for="inputBlock" class="form-label">@Html.DisplayNameFor(Model => Model.Block):</label>
                            <input asp-for="Block" type="text" class="form-control" id="inputBlock">
                        </div>
                        <div class="col-lg-4">
                            <label for="inputTower" class="form-label">@Html.DisplayNameFor(Model => Model.Tower):</label>
                            <input asp-for="Tower" type="text" class="form-control" id="inputTower">
                        </div>
                        
                    </div>

                    <div class="row my-4">
                       <div class="col-lg-4">
                            <label for="inputNumber" class="form-label">@Html.DisplayNameFor(Model => Model.Number):</label>
                            <input asp-for="Number" type="text" class="form-control" id="inputNumber">
                        </div>
                        <div class="col-lg-4">
                            <label for="inputState" class="form-label">@Html.DisplayNameFor(Model => Model.State):</label>
                            <input asp-for="State" type="text" class="form-control" id="inputState">
                        </div>
                        <div class="col-lg-4">
                            <label for="inputCity" class="form-label">@Html.DisplayNameFor(Model => Model.City):</label>
                            <input asp-for="City" type="text" class="form-control" id="inputCity">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <label for="inputComplement" class="form-label">@Html.DisplayNameFor(Model => Model.Complement):</label>
                            <textarea asp-for="Complement" style="max-height: 100px;" class="form-control" placeholder="@Model.Complement" id="inputComplement"></textarea>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

@{
    Html.RenderPartial("_ModalDeleteAlert");
}