@model IEnumerable<QAccess.Models.Unit>

@{
    ViewData["Title"] = "Unidades";
}

<div style="height: 100%; position: relative;">
    <div class="row">
        <h3>Unidades</h3>
    </div>
    
    <div class="row">
        <div class="d-flex flex-row-reverse buttons-group-actions">
            <button type="button" class="btn btn-danger ms-2 d-flex align-items-center"><img width="17px" src="~/images/trash.svg" alt="">Excluir</button>
            <a class="btn btn-edit ms-2 d-flex align-items-center"><img width="20px" src="~/images/pencil-square.svg" alt="">Editar</a>
            <button data-bs-toggle="modal" data-bs-target="#registerUnitsModal" class="btn btn-primary ms-2 d-flex align-items-center"><img width="15px" src="~/images/add.svg" alt="">Adicionar</button>
        </div>
    </div>

    <div class="row filter">
        <ul class="list-unstyled list-group ps-0 nav nav-pills mb-auto">
            <li class="mb-1">
                <button class="justify-content-between btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#filter-collapse" aria-expanded="false">
                    <div  class="d-flex align-items-center">
                        <img width="17px" src="~/images/funnel.svg" alt="">
                        <span class="ps-2">Filtros</span>
                    </div>
                </button>
                <div class="collapse filter-group" id="filter-collapse">
                    <div class="d-flex row flex-nowrap flex-lg-row flex-column">
                        <div class="col-lg-6 col-sm-5">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Pesquise por uma palavra chave..." aria-label="Recipient's username" aria-describedby="button-addon2">
                                <a class="btn btn-outline-secondary" type="button" id="button-addon2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16"><path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/></svg>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-5">
                                <select id="inputState" placeholder="Torre" class="form-select">
                                    <option selected>Torre</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.Tower">@Html.DisplayFor(modelItem => item.Tower)</option>
                                    }
                                    
                                </select>
                        </div>

                        <div class="col-lg-3 col-sm-5">
                            <select id="inputState" placeholder="Mês" class="form-select">
                                <option selected>Bloco</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Block">@Html.DisplayFor(modelItem => item.Block)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="checkModelAll">
                        </div>
                    </th>
                    <th scope="col">ID</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Block)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Tower)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Number)</th>
                    <th scope="col">Ações</th>
                <tr>
            </thead>
            <tbody>
                @{
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="col">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                </div>
                            </th>           
                            <td><a asp-action="Details" asp-controller="Units" asp-route-id="@item.UnitId">@Html.DisplayFor(modelItem => item.UnitId)</a></td>
                            <td>@Html.DisplayFor(modelItem => item.Block)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tower)</td>
                            <td>@Html.DisplayFor(modelItem => item.Number)</td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center items-actions" style="gap: 20px;">
                                    <div><img data-bs-whatever="@item.UnitId" data-bs-toggle="modal" data-bs-target="#unitsModal" width="22px" src="~/images/trash-red.svg" alt=""></div>
                                    <div><a asp-action="Edit" asp-route-id="@item.UnitId"><img width="24px" src="~/images/pencil-square-yellow.svg" alt=""></a></div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class=" pagination-group d-flex flex-row-reverse">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link">Anterior</a>
                </li>
                
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>

                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">2</a>
                </li>

                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>

                <li class="page-item">
                    <a class="page-link" href="#">Próximo</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="registerUnitsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form asp-action="Create">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Criar Unidade</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column">
                <div class="form-floating">
                    <input required maxlength="10" id="Tower" class="form-control" placeholder="Torre" name="Tower" class="form-control" />
                    <label for="Tower">Torre</label>
                </div>
                <div class="form-floating">
                    <input required maxlength="10" id="Block" name="Block" placeholder="Bloco" class="form-control" />
                    <label for="Block">Bloco</label>
                </div>
                <div class="form-floating">
                    <input required maxlength="6" id="Block" name="Number" placeholder="Número" class="form-control" />
                    <label for="Block">Número</label>
                </div>
                <div class="form-floating">
                    <input maxlength="20" id="Country" name="Country" placeholder="País" class="form-control" />
                    <label for="Country">País</label>
                </div>
                <div class="form-floating">
                    <input maxlength="30" id="State" name="State" placeholder="Estado" class="form-control" />
                    <label for="State">Estado</label>
                </div>
                <div class="form-floating">
                    <input maxlength="30" name="City" class="form-control" placeholder="Cidade" />
                    <label name="City">Cidade</label>
                </div>
                <div class="form-floating">
                    <input maxlength="40" id="Road" name="Road" class="form-control" placeholder="Rua" />
                    <label for="Road">Rua</label>
                </div>
                <div class="form-floating">
                    <input maxlength="100" id="Complement" name="Complement" class="form-control" placeholder="Complemento" />
                    <label for="Complement">Complemento</label>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn-danger btn btn-primary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                <button type="submit" class="btn-success btn btn-primary" role="button">Salvar</button>
            </div>
        </form>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="unitsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Deletar Unidade</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body my-2">
                <div class="alert alert-danger" role="alert">
                    <span><strong>Alerta!</strong> Não será possível refazer essa operação. O itém será deletado permanentemente.</span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="0" id="awareUnits">
                    <label class="form-check-label" for="awareUnits">Estou ciente!</label>
                </div>
            </div>
            <div class="modal-footer"> 
                <form asp-action="Delete">
                    <input id="unitInputID" type="hidden" name="id"/>
                    <button id="unitButtonId" class="btn bg-danger btn-primary ms-2 d-flex align-items-center" role="button" type="submit" class="btn btn-danger"><img width="17px" style="margin-right: 3px;" src="~/images/trash.svg" alt="">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>